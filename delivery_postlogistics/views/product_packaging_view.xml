<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record
        id="product_packaging_delivery_postlogistics_inherit_form"
        model="ir.ui.view"
    >
        <field name="name">product.packaging.postlogistics.inherit.form</field>
        <field name="model">product.packaging</field>
        <field name="inherit_id" ref="delivery.product_packaging_delivery_form" />
        <field name="arch" type="xml">
            <field name="shipper_package_code" position="after">
                <field
                    name="postlogistics_option_code"
                    attrs="{'invisible': [('package_carrier_type', '!=', 'postlogistics')], 'required': [('package_carrier_type', '=', 'postlogistics')]}"
                />
            </field>
        </field>
    </record>
</odoo>
